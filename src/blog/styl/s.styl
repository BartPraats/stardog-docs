@import "index"
@import "nib"

normalize-css()
offset = 10px

grid()
  column-width = 60px
  gutter-width = 20px
  columns = 12
  total-width = 100%

  .main
  .sidebar
    float: left

  .main
    column(9)

  .sidebar
    column(3)

#logo
  absolute: top (offset * 2) left (offset * 2)
  float: right

#footer
  absolute: bottom offset left offset

